<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/supemail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:hint="Email"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_mail_black_24dp"/>

        <EditText
            android:id="@+id/supFavSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:hint="Favorite sport?"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_terrain_black_24dp"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/suppass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:hint="Password"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_security_black_24dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/supConfirmpass"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:hint="Re-enter password"
            android:textColorHint="@color/gray"
            android:imeActionId="@integer/loginIMEActionId"
            android:imeActionLabel="@string/login"
            android:imeOptions="actionUnspecified"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_security_black_24dp"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:text="@string/createAccount"
            android:background="@drawable/next_button"
            />

    </LinearLayout>

</RelativeLayout>